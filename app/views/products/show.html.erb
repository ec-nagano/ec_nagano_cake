<h1>ジャンル検索</h1>
<% @categories.each do |category| %>
<li><%= link_to category.name, products_path(category_id: category.id)  %></li>
<% end %>


<tbody>
  <td><%= attachment_image_tag @product, :product_image, size:"200x200", format: 'jpeg' %>
  <%= @product.name %></td>
  <td><%= @product.content %></td>
  <td><%= @product.price*108% %><li>(税込価格)></li></td>
<!-- cart_itemのコントローラーのcreate actionを記述しました。 -->
  <%= form_for @cart_item,:url => {controller: "cart_item", action: "create"} do |f| %>
    <td><%= f.number_field :amount %></td>
        <%= f.hidden_field :product_id, value: cart_item_id %>
    <td><% f.submit 'カートに入れる' %></td>
    <% end %>

</tbody>

