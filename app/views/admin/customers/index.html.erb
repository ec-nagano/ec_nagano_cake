<h3> 会員一覧画面 </h3>

<table class="table table-hover table-inverse">
    <thead>
    	<tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th></th>
        </tr>
    </thead>

    <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to customer.first_name + customer.last_name, admin_customer_path(customer) %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <%= customer.is_active %>
            </td>
          </tr>
        <% end %>
    </tbody>
</table>