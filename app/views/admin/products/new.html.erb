<h3> 商品　新規登録画面 </h3>

<% if @product.errors.any? %>
　  <div id="error_explanation">
      <h4>【 入力されていない項目があります。 】</h4>
  　</div>
<% end %>

<div class="admin_product_new">

<%= form_for(@product, url: '/admin/products') do |f| %>

	  <div class="product_new_field">
	  <%= f.attachment_field :product_image %>
	  <!-- 画像選択ボタンにbootstrapをかける -->
	  <!-- この上にプレビュー画像を実装する -->

	  </div>

	  <div class="product_new_field">
        <label for="product_new_label">商品名
          <%= f.text_field :name %>
        </label>
      </div>

      <div class="product_new_field">
      	<label for="product_new_label">商品説明
      	  <%= f.text_area :content %>
      	</label>
      </div>


      <div class="product_new_field"><!-- ジャンル名を表示させるためにカテゴリーモデルからデータをひっぱってくる　-->
      	<label for="product_new_label">ジャンル
          <%= f.collection_select(:category_id, Category.where(is_active: true), :id, :name)%>
        </label>
      </div>


      <div class="product_new_field">
      	<label for="product_new_label">税抜価格
      	  <%= f.text_field :price %> 円
        </label>
      </div>

      <div class="product_new_field">
      	<label for="product_new_label">販売ステータス
      	  <%= f.select :is_active, [["販売中", true],["売り切れ", false]] , include_blank: "選択して下さい" %>
      	</label>
      </div>

      <div class="product_new_action">
  	  <%= f.submit("新規登録", class: "btn btn-primary") %>
      </div>
  <% end %>
</div>
