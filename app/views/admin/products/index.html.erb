<h3> 商品一覧画面 </h3>

<table class="table table-hover table-inverse">
    <thead>
      <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th></th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <%= product.id %>
            </td>
            <td>
              <%= link_to product.name, admin_product_path(product) %>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td>
              <%= product.category.name %>
            </td>
            <td>
              <%= product.is_active %>
            </td>
          </tr>
        <% end %>
    </tbody>
</table>

