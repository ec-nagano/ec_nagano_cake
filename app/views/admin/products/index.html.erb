<h3>
  商品一覧画面
   <label for="product_index_label">
     <%= link_to "" ,new_admin_product_path, class:'glyphicon glyphicon-plus' %>
   </label>
</h3>


<table class="table table-hover table-inverse">
    <thead>
      <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th></th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <%= product.id %>
            </td>
            <td>
              <%= link_to product.name, admin_product_path(product) %>
            </td>
            <td>
              <!-- ここは税抜価格の表示でOK -->
              <%= product.price %>
            </td>
            <td>
              <%= product.category.name %>
            </td>
            <td>
              <% if product.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
    </tbody>
</table>

