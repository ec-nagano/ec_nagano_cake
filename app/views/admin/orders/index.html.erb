<h1>注文一覧画面</h1>

<table>
	<tr>
		<th>購入日時</th>
		<th>購入者</th>
		<th>注文個数</th>
		<th>注文ステータス</th>
	</tr>

	<% @orders.each do |order| %>
		<% customer = order.customer %>
		<% ordered_items = order.ordered_items %>

		<!-- 注文商品の個数の合計を求める -->
		<% sum = 0 %>
		<% ordered_items.each do |item| %>
			<% sum += item.amount %>
		<% end %>
	<tr>
		<td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
		<td><%= customer.first_name + customer.last_name %></td>
		<td><%= sum %></td>
		<td><%= order.status %></td>
	</tr>
	<% end %>
	<%= paginate @orders %>
</table>