<h2>注文履歴詳細</h2>

<h3>注文情報</h3>
<table>
    <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
    </tr>
    <tr>
        <th>配送先</th>
        <td>
            <%= @order.postcode %><br>
            <%= @order.address %><br>
            <%= @order.recipient %>
        </td>
    </tr>
    <tr>
        <th>支払方法</th>
        <td><%= @order[:payment] %></td>
    </tr>
    <tr>
        <th>ステータス</th>
        <td><%= @order[:status] %></td>
    </tr>
</table>

<h3>請求金額</h3>
<table>
    <tr>
        <th>商品合計</th>
        <td><%= @order.billing_amount %></td>
    </tr>
    <tr>
        <th>配送料</th>
        <td><%= @order.delivery_fee %></td>
    </tr>
    <tr>
        <th>請求金額</th>
        <td><%= @order.delivery_fee + @order.billing_amount %></td>
    </tr>
</table>

<h3>注文内容</h3>
<table>
    <thead>
        <tr>商品</tr>
        <tr>単価（税込）</tr></tr>
        <tr>個数</tr>
        <tr>小計</tr>
    </thead>

    <tbody>
        <%= @ordered_items.each do |ordered_item| %>
            <tr><%= ordered_item.name %></tr>
            <tr><%= ordered_item.price %></tr>
            <tr><%= ordered_item.amount %></tr>
            <tr><%= ordered_item.price * ordered_item.amount %></tr>
        <% end %>
    </tbody>
</table> 