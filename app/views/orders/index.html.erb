<h2>注文履歴一覧</h2>

<table class="table table-hover table-inverse">
    <thead>
        <tr>注文日</tr>
        <tr>配送先</tr>
        <tr>注文商品</tr>
        <tr>支払金額</tr>
        <tr>ステータス</tr>
        <tr>注文詳細</tr>
    </thead>

    <tbody>
        <% @orders.each do |order| %>
            <tr><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></tr>
            <tr>
                <%= order.postcode %><br>
                <%= order.address %><br>
                <%= order.recipient %>
            </tr>
            <tr>
                <%# orderに紐づけられたordered_itemsを取得し、名前のみ表示 %>
                <% order.ordered_items.each do |ordered_item| %>
                    <%= ordered_item.name %>
                <% end %>
            </tr>
            <tr><%= order.delivery_fee + order.billing_amount %></tr>
            <tr><%= ordered[:status] %></tr>
            <tr>
                <%= link_to("表示する", order_path(order.id), class: "btn btn-primary") %>
            </tr>
        <% end %>
    </tbody>
</table>  